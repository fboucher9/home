#!/bin/bash

# See LICENSE for license details

#
# Module: ~/bin/v
#
# Description:
#       Launch favorite editor.
#
# Comments:
#     - This is equivalent of 'alias v=vim'
#

# Make sure bin folder has been created
if [ ! -d ~/bin ]; then
    mkdir ~/bin
fi

# Create the script in the bin folder
(
echo '#!/bin/bash'
echo 'exec ${EDITOR} "${@}"'
) > ~/bin/v

# Make the script executable
chmod +x ~/bin/v

# end-of-file: ~/bin/v
